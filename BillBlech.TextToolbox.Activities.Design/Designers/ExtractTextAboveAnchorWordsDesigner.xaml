<sap:ActivityDesigner x:Class="BillBlech.TextToolbox.Activities.Design.Designers.ExtractTextAboveAnchorWordsDesigner"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:activity="clr-namespace:BillBlech.TextToolbox.Activities.Properties;assembly=BillBlech.TextToolbox.Activities"
                      xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
                      xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
                      xmlns:sapc="clr-namespace:System.Activities.Presentation.Converters;assembly=System.Activities.Presentation"
                      xmlns:converters="clr-namespace:UiPath.Shared.Activities.Design.Converters"
                      xmlns:uip="clr-namespace:UiPath.Shared.Activities.Design.Controls"
                      xmlns:c="clr-namespace:BillBlech.TextToolbox.Activities.Design">

    <sap:ActivityDesigner.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Themes\Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <sapc:ArgumentToExpressionConverter x:Key="ArgumentToExpressionConverter" />
            <c:ComboBoxConverter x:Key="comboBoxItemConverter"/>
            <converters:ActivityIconConverter x:Key="ActivityIconConverter" />
        </ResourceDictionary>
    </sap:ActivityDesigner.Resources>

    <sap:ActivityDesigner.Icon>
        <DrawingBrush Stretch="Uniform" Drawing="{Binding Path=ModelItem, Converter={StaticResource ActivityIconConverter}, ConverterParameter=pack://application:\,\,\,/BillBlech.TextToolbox.Activities.Design;component/themes/icons.xaml}" />
    </sap:ActivityDesigner.Icon>

    <uip:ActivityDecoratorControl Style="{StaticResource ActivityDecoratorStyle}">
        <Grid Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--Anchor Words -->
            <Label Content="{x:Static activity:Resources.ExtractTextAboveAnchorWords_AnchorWords_DisplayName}" Grid.Row="0"
                   ToolTip="{x:Static activity:Resources.ExtractTextAboveAnchorWords_AnchorWords_Description}"/>
            <sapv:ExpressionTextBox Grid.Row="1" ExpressionType="{Binding ModelItem.Properties[AnchorWords].PropertyType.GenericTypeArguments[0]}" OwnerActivity="{Binding Path=ModelItem}" HintText="{x:Static activity:Resources.ExtractTextAboveAnchorWords_AnchorWords_Description}" UseLocationExpression="False" Name="AnchorWords" Margin="0,0,27,0">
                <sapv:ExpressionTextBox.Expression>
                    <Binding Path="ModelItem.AnchorWords" Converter="{StaticResource ArgumentToExpressionConverter}" Mode="TwoWay" ConverterParameter="In" UpdateSourceTrigger="PropertyChanged" />
                </sapv:ExpressionTextBox.Expression>
            </sapv:ExpressionTextBox>
            <!--ID Text -->
            <sapv:ExpressionTextBox Grid.Row="0" ExpressionType="{Binding ModelItem.Properties[IDText].PropertyType.GenericTypeArguments[0]}" OwnerActivity="{Binding Path=ModelItem}" HintText="{x:Static activity:Resources.IDText_Description}" UseLocationExpression="False" Name="IDText" Margin="213,2,0,2" Visibility="Hidden">
                <sapv:ExpressionTextBox.Expression>
                    <Binding Path="ModelItem.IDText" Converter="{StaticResource ArgumentToExpressionConverter}" Mode="TwoWay" ConverterParameter="In"  UpdateSourceTrigger="PropertyChanged"/>
                </sapv:ExpressionTextBox.Expression>
            </sapv:ExpressionTextBox>
            <!-- Menu Button-->
            <Button Content="" Height="20" Width="20" Margin="275,2,5,1" RenderTransformOrigin="0.529,-0.15" Click="CallCallButton_SetupWizard" Grid.Row="1" Name="btn" ToolTip="Access 'Wizard' and 'Preview' functionalities" Focusable="False" Visibility="Visible">
                <Button.Background>
                    <ImageBrush ImageSource="/BillBlech.TextToolbox.Activities.Design;component/Resources/MenuIcon.png"/>
                </Button.Background>
            </Button>
            
            <!--Lines Above -->
            <Label Content="{x:Static activity:Resources.ExtractTextAboveAnchorWords_LinesNumber_DisplayName}" Grid.Row="2"
                   ToolTip="{x:Static activity:Resources.ExtractTextAboveAnchorWords_LinesNumber_Description}" Margin="0,0,148,0"/>
            <sapv:ExpressionTextBox Grid.Row="3" ExpressionType="{Binding ModelItem.Properties[LinesNumber].PropertyType.GenericTypeArguments[0]}" OwnerActivity="{Binding Path=ModelItem}" HintText="{x:Static activity:Resources.ExtractTextAboveAnchorWords_LinesNumber_Description}" UseLocationExpression="False" Margin="0,0,148,0" Name="LinesNumber">
                <sapv:ExpressionTextBox.Expression>
                    <Binding Path="ModelItem.LinesNumber" Converter="{StaticResource ArgumentToExpressionConverter}" Mode="TwoWay" ConverterParameter="In" UpdateSourceTrigger="PropertyChanged" />
                </sapv:ExpressionTextBox.Expression>
            </sapv:ExpressionTextBox>
            <!--Number of lines -->
            <Label Content="{x:Static activity:Resources.ExtractTextAboveAnchorWords_NumberLines_DisplayName}" Grid.Row="2"
                   ToolTip="{x:Static activity:Resources.ExtractTextAboveAnchorWords_NumberLines_Description }" Margin="152,0,0,0"/>
            <sapv:ExpressionTextBox Grid.Row="3" ExpressionType="{Binding ModelItem.Properties[NumberLines].PropertyType.GenericTypeArguments[0]}" OwnerActivity="{Binding Path=ModelItem}" HintText="{x:Static activity:Resources.ExtractTextAboveAnchorWords_NumberLines_Description}" UseLocationExpression="False" Margin="152,0,0,0" Name="NumberLines">
                <sapv:ExpressionTextBox.Expression>
                    <Binding Path="ModelItem.NumberLines" Converter="{StaticResource ArgumentToExpressionConverter}" Mode="TwoWay" ConverterParameter="In" UpdateSourceTrigger="PropertyChanged" />
                </sapv:ExpressionTextBox.Expression>
            </sapv:ExpressionTextBox>

            <!--Combo Box-->
            <Label Content="{x:Static activity:Resources.ExtractAllLinesBelowAnchorText_AnchorTextParam_DisplayName}" Grid.Row="4"
                   ToolTip="{x:Static activity:Resources.ExtractAllLinesBelowAnchorText_AnchorTextParam_Description}"/>
            <ComboBox Grid.Row="5"
                      SelectedValue="{Binding Path=ModelItem.AnchorTextParam, Mode=TwoWay, Converter={StaticResource comboBoxItemConverter}, ConverterParameter=In}"  
                      ItemsSource="{Binding LstAnchorTypeParam, Mode=TwoWay}"
                            Margin="141,5,74,6"
                      Name="AnchorTextParamComboBox"
                      SelectionChanged="AnchorTextParamComboBox_SelectionChanged" Height="Auto"/>


        </Grid>
    </uip:ActivityDecoratorControl>
</sap:ActivityDesigner>
